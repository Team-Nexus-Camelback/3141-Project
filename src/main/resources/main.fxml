<?xml version="1.0" encoding="UTF-8"?>

<?language javascript?>
<?import javafx.scene.chart.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainController">
    <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
				<!--Create a new budget-->
              <MenuItem mnemonicParsing="false" text="New" />
				<!--Open exiting budget file-->
                  <MenuItem mnemonicParsing="false" text="Open" />
				  <!--Save the current budget-->
                  <MenuItem mnemonicParsing="false" text="Save" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" side="LEFT" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
			<!--This is the "main" view. It will have the add button so people can add their perchases-->
          <Tab text="Main View">
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <bottom>
						<!--Button to bring up the adding data prompty-->
                        <Button mnemonicParsing="false" onAction="#inputWindow" text="+" BorderPane.alignment="BOTTOM_RIGHT" />
                     </bottom>
                     <top>
                        <ChoiceBox prefWidth="150.0" BorderPane.alignment="CENTER">
                        	<!-- Code for taking in arraylist of months -->
                        </ChoiceBox>
                     </top>
                     <center>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                           <children>

                              <GridPane>
                                <columnConstraints>
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="450.0" prefWidth="450.0" />
                                </columnConstraints>
                                <rowConstraints>
                                  <RowConstraints maxHeight="294.0" minHeight="0.0" prefHeight="41.0" vgrow="SOMETIMES" />
                                  <RowConstraints maxHeight="692.0" minHeight="10.0" prefHeight="463.0" vgrow="SOMETIMES" />
                                  <RowConstraints maxHeight="322.0" minHeight="10.0" prefHeight="277.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                 <children>
                                    <Label text="Expenses" GridPane.halignment="CENTER">
                                       <font>
                                          <Font size="29.0" />
                                       </font>
                                    </Label>
                                    <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0" GridPane.rowIndex="1">
                                      <items>
                                        <BorderPane minHeight="0.0" minWidth="100.0" prefHeight="160.0" prefWidth="100.0">
                                             <center>
                                                <BarChart BorderPane.alignment="CENTER">
                                                  <xAxis>
                                                    <CategoryAxis side="BOTTOM" />
                                                  </xAxis>
                                                  <yAxis>
                                                    <NumberAxis side="LEFT" />
                                                  </yAxis>
                                                </BarChart>
                                             </center>
                                            <bottom>
                                                <Button text="Add" onAction="#addPurchaseEvent">
                                                </Button>
                                            </bottom>
                                        </BorderPane>
                                        <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
                                            <padding>
                                                <Insets bottom="5.0" left="0" right="0" top="5.0"/>
                                            </padding>
                                            <Label style="-fx-font: NORMAL 20 Tahoma;" text="Latest"
                                                   GridPane.columnIndex="0" GridPane.rowIndex="0">
                                            </Label>
                                            <TableView fx:id="latestPerchaseTable" GridPane.columnIndex="0"
                                                       GridPane.rowIndex="1">
                                                <columns>
                                                    <TableColumn text="Date" prefWidth="60.0">
                                                    </TableColumn>
                                                    <TableColumn text="Name" prefWidth="150.0">
                                                    </TableColumn>
                                                    <TableColumn text="Amount" prefWidth="75.0">
                                                    </TableColumn>
                                                    <TableColumn text="Category" prefWidth="100.0">
                                                    </TableColumn>
                                                </columns>
                                            </TableView>
                                            <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="0"
                                                  GridPane.rowIndex="2">
                                                <TextField fx:id="dateField" promptText="Date" prefWidth="60.0"/>
                                                <TextField fx:id="nameField" promptText="Name" prefWidth="150.0"/>
                                                <TextField fx:id="amountField" promptText="Amount" prefWidth="75.0"/>
                                                <TextField fx:id="categoryField" promptText="Category" prefWidth="90.0"/>
                                                <Button text="+" onAction="#addPurchaseEvent"/>
                                            </HBox>
                                        </GridPane> 
                                      </items>
                                    </SplitPane>
                                     <TableView fx:id="billsDue" GridPane.rowIndex="2">
                                         <!-- For stuff to update table of Bills Due -->
                                     </TableView>
                                 </children>
                              </GridPane>
                           <GridPane GridPane.columnIndex="1">
                               <columnConstraints>
                                   <ColumnConstraints hgrow="SOMETIMES" minWidth="450.0" prefWidth="450.0" />
                               </columnConstraints>
                               <rowConstraints>
                                   <RowConstraints maxHeight="517.0" minHeight="517.0" prefHeight="517.0" vgrow="NEVER" />
                                   <RowConstraints maxHeight="283.0" minHeight="283.0" prefHeight="283.0" vgrow="SOMETIMES" />
                               </rowConstraints>
                               <children>
                                   <PieChart fx:id="purchasesPie" GridPane.rowIndex="0" />
                                   <TableView fx:id="changesTable" GridPane.rowIndex="1" />
                               </children>
                           </GridPane>
                           </children>
                        </AnchorPane>
                     </center>
                  </BorderPane>
               </content>
          </Tab>
		  <!--This will be the tab that has the view for seeing the graph and information that will be on that page-->
          <Tab text="Graph View">
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <top>
                        <ChoiceBox prefWidth="150.0" BorderPane.alignment="CENTER" />
                     </top>
                  </BorderPane>
               </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
